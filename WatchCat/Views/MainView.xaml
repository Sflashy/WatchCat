<Window
    x:Class="WatchCat.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WatchCat.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WatchCat"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WatchCat.ViewModels"
    Title="WatchCat"
    Width="760"
    Height="605"
    MinWidth="300"
    MinHeight="400"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    Background="{StaticResource WatchCatPrimaryBackgroundColor}"
    FontFamily="Roboto"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    ThemeMode="Dark"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="1" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:TopBar />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <controls:SearchBar Margin="10,10,10,0" />
            <materialDesign:Card
                Grid.Row="1"
                Margin="10"
                UniformCornerRadius="15">
                <DataGrid
                    x:Name="DataGrid"
                    Padding="5"
                    Background="{StaticResource WatchCatSecondaryBackgroundColor}"
                    FontSize="15"
                    IsReadOnly="True"
                    ItemsSource="{Binding FilteredParts}"
                    Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.RowStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridRow}" TargetType="DataGridRow">
                            <Setter Property="Foreground" Value="{StaticResource WatchCatPrimaryColor}" />
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.ColumnHeaderStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                            <Setter Property="Foreground" Value="{StaticResource WatchCatPrimaryColor}" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="BorderThickness" Value="0" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </materialDesign:Card>
        </Grid>

        <materialDesign:Snackbar
            Grid.Row="1"
            Margin="10"
            Background="{StaticResource WatchCatPrimaryBackgroundColor}"
            FontWeight="SemiBold"
            Foreground="{StaticResource WatchCatPrimaryColor}"
            MessageQueue="{Binding MessageQueue}" />
    </Grid>
</Window>
